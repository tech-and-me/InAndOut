
@model IEnumerable<InAndOut.Models.Expense>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">My Expenses List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Expenses" asp-action="Create" class="btn btn-primary">Add New Expenses</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Expense Name
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var exp in Model)
                {
                <tr>
                    <td width="35%">@exp.ExpensesName</td>
                    <td width="35%">@exp.Amount</td>
                    <td width="20%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Expenses" asp-action="Update" asp-route-Id="@exp.Id" class="btn btn-primary mx-1">Update</a>
                            <a asp-controller="Expenses" asp-action="Delete" asp-route-Id="@exp.Id" class="btn btn-danger mx-1">Delete</a>
                        </div>
                     </td>
                </tr>
                }

            </tbody>
        </table>
    }
    else
    {
        <p>No expenses added yet</p>
    }


</div>


